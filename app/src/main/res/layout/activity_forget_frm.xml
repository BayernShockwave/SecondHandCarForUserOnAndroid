<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetFrm">

    <RelativeLayout
        android:id="@+id/forget_frm"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="Find back your Password"
            android:textSize="@dimen/sechs_size"></TextView>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/title"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/decepticons"></ImageView>

        <FrameLayout
            android:id="@+id/uid_frm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="275dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/decepticons"></ImageView>

            <EditText
                android:id="@+id/uid"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:hint="请输入账号"
                android:paddingRight="100dp"></EditText>

            <Button
                android:id="@+id/uidclear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="325dp"
                android:background="@drawable/delete"></Button>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/uphone_frm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uid_frm"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/decepticons"></ImageView>

            <EditText
                android:id="@+id/uphone"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:hint="请输入联系电话"
                android:paddingRight="100dp"></EditText>

            <Button
                android:id="@+id/uphoneclear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="325dp"
                android:background="@drawable/delete"></Button>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/uemail_frm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uphone_frm"
            android:layout_marginTop="25dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/decepticons"></ImageView>

            <EditText
                android:id="@+id/uemail"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:hint="请输入电子邮箱"
                android:paddingRight="100dp"></EditText>

            <Button
                android:id="@+id/uemailclear"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="325dp"
                android:background="@drawable/delete"></Button>

        </FrameLayout>

        <Button
            android:id="@+id/confirm"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/uemail_frm"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:text="确定"></Button>

        <Button
            android:id="@+id/clean"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@id/uemail_frm"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:text="清空"></Button>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>